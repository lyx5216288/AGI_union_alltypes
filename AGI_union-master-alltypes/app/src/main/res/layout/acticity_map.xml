<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
    <TextView
            android:id="@+id/lbsmap_tai_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="TAI:"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="15%" />

        <EditText
            android:id="@+id/lbsmap_tai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@+id/lbsmap_tai_text"
            android:gravity="center"
            android:inputType="number"
            android:textSize="13sp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%" />

        <TextView
            android:id="@+id/lbsmap_ecgi_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@+id/lbsmap_tai"
            android:gravity="center"
            android:text="ECGI:"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="15%" />

        <EditText
            android:id="@+id/lbsmap_ecgi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/lbsmap_ecgi_text"
            android:inputType="number"
            android:textSize="13sp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="35%" />
        <Button
            android:id="@+id/lbsmap_select"
            android:text="查询"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/lbsmap_ecgi"
            android:inputType="number"
            android:textSize="13sp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="15%" />
    </android.support.percent.PercentRelativeLayout>
    <com.baidu.mapapi.map.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mymapview">

    </com.baidu.mapapi.map.MapView>

</LinearLayout>